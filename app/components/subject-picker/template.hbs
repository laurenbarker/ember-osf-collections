<div class="row">
    {{#each currentSubjects as |subject index|}}
        <span class="subject subject-align">
            {{#each subject as |segment|}}
                <div class="subject-container">
                    <span class="subject-container-text">
                        {{segment.text}}
                        <button class="cancel-subject fa fa-close" aria-label="{{t 'submit.body.remove_subject_aria'}}" title="Remove" {{action 'deselect' index}}></button>
                    </span>
                </div>
                <span class="right-arrow"></span>
            {{/each}}
        </span>
    {{/each}}
</div>
<div class="row">
    {{#each columns as |column tier|}}
        <div class="col-md-4">
            <ul style="overflow: scroll" role="listbox">
                {{input value=column.filterText class="form-control" placeholder="Search"}}
                {{#each column.subjectsSorted as |subject|}}
                    <li {{action 'select' subject tier}} class={{if (eq subject column.selection) 'selected'}} role="listitem">
                        {{subject.text}}
                    </li>
                {{/each}}
            </ul>
        </div>
    {{/each}}
</div>
